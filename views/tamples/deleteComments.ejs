<% layout('layouts/boilerplate') %>

<div class="container">
  <div>
    <form
      action="/doctors/<%= foundDoctor._id %>/comments/delete"
      method="POST"
      class="form-control"
    >
      <div class="row">
        <% foundDoctor.images.forEach(function(img, i) { %>
        <div class="col-md-3 mb-3">
          <div class="card">
            <img
              src="<%= img.url %>"
              class="card-img-top img-thumbnail"
              alt="image"
            />
            <div class="card-body">
              <div class="form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="image-<%= i %>"
                  name="deleteImage"
                  value="<%= img.filename %>"
                />
                <label class="form-check-label" for="image-<%= i %>"
                  >Delete</label
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>

<style>
  /* Custom CSS to make images smaller */
  .img-thumbnail {
    width: 100%; /* Adjust the width as needed */
    height: auto; /* Maintain aspect ratio */
  }
</style>
