<% layout('layouts/boilerplate')%>
<h1>Edit</h1>

<form
  action="/admin/patients/<%= foundPatient._id %>/edit?_method=PATCH"
  method="POST"
>
  <label for="name">Name</label>
  <input
    type="text"
    id="name"
    name="name"
    value="<%= foundPatient.name %>"
    required
  />

  <label for="age">Age</label>
  <input
    type="text"
    id="age"
    name="age"
    value="<%= foundPatient.age %>"
    required
  />

  <label for="gender">Gender</label>
  <select name="gender" id="gender" value="<%= foundPatient.gender %>">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>

  <label for="phoneNumber">Phone Number</label>
  <input
    type="number"
    name="phoneNumber"
    id="phoneNumber"
    value="<%= foundPatient.phoneNumber %>"
  />

  <label for="address">Address</label>
  <input
    type="text"
    id="address"
    name="address"
    value=" <%= foundPatient.address %>"
  />

  <button type="submit">Save</button>
</form>
<a href="/patients">Cancel</a>
