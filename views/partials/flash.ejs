<% if (success && success.length) {%>
<div
  class="alert alert-success alert-dismissible fade show w-25 mx-auto text-center"
  id="success"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
<!-- ////////////////////////////// -->
<% if (error && error.length) {%>
<div
  class="alert alert-danger alert-dismissible fade show w-25 mx-auto"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<style>
  #success {
    width: 30px;
  }
</style>
